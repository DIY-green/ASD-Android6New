<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.diygreen.android6new.newapi.ShareActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="分享示例"
        android:id="@+id/tv_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="分享给："
        android:id="@+id/tv_shareto_tip"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shareto_tip"
        android:layout_toEndOf="@+id/tv_shareto_tip"
        android:src="@mipmap/ic_logo" />

    <TextView
        android:id="@+id/tv_accepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="接收人"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignBottom="@+id/iv_icon"
        android:layout_toEndOf="@+id/iv_icon" />

    <TextView
        android:id="@+id/tv_sharecontenttip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="分享内容："
        android:layout_below="@+id/iv_icon"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_sharecontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="分享内容"
        android:layout_below="@+id/tv_sharecontenttip"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享"
        android:id="@+id/btn_share"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"/>
</RelativeLayout>
